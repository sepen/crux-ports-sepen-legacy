# Depends on: prt-utils

name=crux-scripts-sepen
version=2.3-svn
release=1
source=()

build() {
  svn co svn://mikeux.dyndns.org/crux/branches/2.3/tools ${name}
  install -d ${PKG}/usr/bin
  install -m 0755 ${SRC}/${name}/* ${PKG}/usr/bin
}
