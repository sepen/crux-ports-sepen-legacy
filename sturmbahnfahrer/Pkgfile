# $Id: $
# Description:  Simulated obstacle course for automobiles
# URL:          http://www.sturmbahnfahrer.com/
# Maintainer:   Jose V Beneyto, <joberui@ei.upv.es>
# Packager:     Jose V Beneyto, <joberui@ei.upv.es>
# Depends on:   x11,freeglut.ode,plib,alsa-lib

name=sturmbahnfahrer
version=1.2
release=1
source=(ftp://download.fedora.redhat.com/pub/fedora/linux/extras/6/SRPMS/$name-$version-2.fc6.src.rpm \
	Makefile.patch)

build() {
	rpm2targz $name-$version-2.fc6.src.rpm
	tar xvfz $name-$version-2.fc6.src.tar.gz
	tar xvfz $name-$version.tar.gz
	cd $name-$version
	patch Makefile $SRC/Makefile.patch
	#make clean
	make
read
	make DESTDIR=$PKG install
}
