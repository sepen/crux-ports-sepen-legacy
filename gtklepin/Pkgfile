# Description: GTK based notebook which has similar functionality to the Psion Revo PDA.
# URL: http://ordiluc.net/gtklepin/
# Maintainer: Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager: Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on: gtk

name=gtklepin
version=0.3
release=1
source=(http://ordiluc.net/$name/$name-$version.tar.bz2)

build() {
  cd $name-$version
  ./configure --prefix=/usr \
              --disable-nls \
              --disable-debug \
              --disable-glibtest \
              --disable-gtktest \
              --without-zlib
  make
  make DESTDIR=$PKG install
}
