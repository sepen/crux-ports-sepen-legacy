# Description:  Logging module for python
# URL: 		http://sourceforge.net/projects/log4py/
# Maintainer:   Jose V Beneyto, joberui at ei dot upv dot es
# Packager:     Jose V Beneyto, joberui at ei dot upv dot es
# Depends on: 	python

name=log4py
version=1.3
release=1
source=(http://dl.sourceforge.net/sourceforge/$name/$name-$version.tar.gz)

build() {
    cd $name-$version
    python setup.py install -f --prefix=$PKG/usr --install-lib=$PKG/usr/lib/$name
}
