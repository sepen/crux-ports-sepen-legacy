# Description: Utility for monitoring daemons running on a Unix system
# URL: http://www.tildeslash.com/monit/
# Maintainer: Jose V Beneyto, joberui at ei dot upv dot es
# Packager: Jose V Beneyto, joberui at ei dot upv dot es
# Depends on: openssl 

name=monit
version=4.9
release=1
source=(http://www.tildeslash.com/${name}/dist/${name}-${version}.tar.gz \
        monitd)

build() {
  cd ${name}-${version}
  ./configure --prefix=/usr \
              --mandir=/usr/man
  make
  make DESTDIR=${PKG} install
  install -D -m 0755 ${SRC}/monitd ${PKG}/etc/rc.d/monitd
  install -D -m 0700 ${SRC}/${name}-${version}/monitrc ${PKG}/etc/monitrc
}
