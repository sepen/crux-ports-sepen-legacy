# Description: Transparent vte-based terminal emulator.
# URL: http://www.nongnu.org/antiright/
# Maintainer: Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager: Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on: gtkshell

name=gshterm
version=3.6
release=1
source=()

build() {
  cvs -d:pserver:anonymous@cvs.sv.gnu.org:/sources/antiright co antiright/gtkshell/${name}
  cvs -d:pserver:anonymous@cvs.sv.gnu.org:/sources/antiright co antiright/doc/${name}.1
  install -D -m 0755 antiright/gtkshell/${name} ${PKG}/usr/bin/${name}
  install -D -m 0644 antiright/doc/${name}.1 ${PKG}/usr/man/man1/${name}.1
}
