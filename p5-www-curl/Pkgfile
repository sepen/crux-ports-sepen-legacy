# Description: Perl extension interface for libcurl
# URL: http://search.cpan.org/~crisb/WWW-Curl/
# Maintainer: Jose V Beneyto, joberui at ei dot upv dot es
# Packager: Jose V Beneyto, joberui at ei dot upv dot es
# Depends on: p5-www-curl

name=p5-www-curl
version=3.02
release=1
source=(http://search.cpan.org/CPAN/authors/id/C/CR/CRISB/WWW-Curl-3.02.tar.gz)

build() {
	cd WWW-Curl-$version
	perl Makefile.PL
	make OPTIMIZE="${CFLAGS}"
	make DESTDIR=$PKG install
	find $PKG -type f -name perllocal.pod -exec rm '{}' \;
	find $PKG -type f -name .packlist -exec rm '{}' \;	
}
