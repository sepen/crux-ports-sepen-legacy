# Description: Class Library for Numbers.
# URL: http://www.ginac.de/CLN/
# Maintainer: Jose V Beneyto, joberui at ei dot upv dot es
# Packager: Jose V Beneyto, joberui at ei dot upv dot es
# Depends on: libgmp

name=cln
version=1.1.13
release=1
source=(ftp://ftpthep.physik.uni-mainz.de/pub/gnu/${name}-${version}.tar.bz2)

build() {
  cd ${name}-${version}
  ./configure --prefix=/usr
  make
  make DESTDIR=${PKG} install
  mv ${PKG}/usr/share/man ${PKG}/usr
  rm -rf ${PKG}/usr/share/{info,html}

}
