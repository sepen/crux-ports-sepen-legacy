# Description: Flock is an amazing new web browser that makes it easier to share media and connect to other people online.
# URL: http://www.flock.com/
# Maintainer: Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager: Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on: gtk

name=flock
version=1.1.1
release=1
source=(http://mirror2.flock.com/releases/$version/$name-$version.en-US.linux-i686.tar.gz \
        $name.desktop $name.png)

build() {
  install -d $PKG/usr/{bin,lib}
  rm -f $name/.autoreg
  mv $name $PKG/usr/lib
  ln -sf /usr/lib/$name/$name $PKG/usr/bin/$name-browser
  install -D -m 0644 $SRC/$name.desktop $PKG/usr/share/applications/$name.desktop
  install -D -m 0644 $SRC/$name.png $PKG/usr/share/pixmaps/$name.png
}
