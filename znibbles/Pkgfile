# $Id: $
# Description:  A multi-player networked nibbles game
# URL:          http://www.jfouffa.com/vmallet/ZNibbles.html
# Maintainer:   Jose V Beneyto, <joberui@eui.upv.es>
# Packager:     Jose V Beneyto, <joberui@eui.upv.es>
# Depends on:   x11,gtk

name=znibbles
version=0.0.7
release=1
source=(http://www.jfouffa.com/vmallet/archives/$name-$version.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=/usr \
  		    --disable-gtk \
		    --disable-gtktest \
		    --disable-motif \
  		    --with-x \
		    --without-motif
read
	make
read
	make DESTDIR=$PKG install
}
