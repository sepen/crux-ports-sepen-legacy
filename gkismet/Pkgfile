# Description: 	GUI frontend for kismet
# URL:		http://gkismetdl.sourceforge.net/
# Maintainer:   Jose V Beneyto, joberui at ei dot upv dot es
# Packager:     Jose V Beneyto, joberui at ei dot upv dot es
# Depends on: 	kismet,gtk-perl

name=gkismet
version=0.0.7
release=1
source=(http://dl.sourceforge.net/sourceforge/$name/$name-$version.tar.gz)

build() {
    cd $name-$version
    mkdir -p $PKG/usr
    ln -sf $PKG/usr install_dir
    sed -i 's/PREFIX=\/usr\/local/PREFIX=install_dir/g' Makefile 
    make
    make install
}
