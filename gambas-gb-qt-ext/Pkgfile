# $Id: $
# Description:  Gambas graphical QT toolkit extension component
# URL:          http://gambasdl.sourceforge.net/
# Maintainer:   Jose V Beneyto, joberui at ei dot upv dot es
# Packager:     Jose V Beneyto, joberui at ei dot upv dot es
# Depends on:   gambas-gb-qt

name=gambas-gb-qt-ext
version=1.9.28
release=1
source=(http://dl.sourceforge.net/sourceforge/gambas/gambas2-$version.tar.bz2)

build() {
	mkdir -p $PKG/usr/bin
	ln -sf /usr/bin/gb*2 $PKG/usr/bin
	cd gambas2-$version/gb.qt
	./reconf
	export QTDIR=/usr/lib/qt
        ./configure --prefix=/usr \
                    --enable-qt \
                    --disable-qteditor \
                    --enable-qtext \
                    --disable-qtopengl

	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/bin
        rm $PKG/usr/lib/gambas2/{gb.qt.gambas,gb.qt.component*,gb.qt.la,gb.qt.so*,gb.qt.editor*}
        rm $PKG/usr/share/gambas2/info/{gb.qt.info,gb.qt.list,gb.qt.editor*}
}
