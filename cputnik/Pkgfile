# Description:  Simple CPU and memory monitor 
# URL: 		http://clay.ll.pl/dockapps.html
# Maintainer:   Jose V Beneyto, joberui at ei dot upv dot es
# Packager:     Jose V Beneyto, joberui at ei dot upv dot es
# Depends on:	x11

name=cputnik
version=0.2.0
release=1
source=(http://clay.ll.pl/download/$name-$version.tar.gz)

build() {
    	cd $name-$version
    	sed -i 's/.clay/.cputnik/g' src/cputnik.c
	sed -i 's/cputnik.rc/conf/g' src/cputnik.c
	make CFLAGS="$CFLAGS"
	mkdir -p $PKG/usr/bin
	install -m 755 $name $PKG/usr/bin/$name
}
