# Description: Invocation configurable GUI shell.
# URL: http://www.nongnu.org/antiright/
# Maintainer: Jose V Beneyto, joberui at ei dot upv dot es
# Packager: Jose V Beneyto, joberui at ei dot upv dot es
# Depends on: libantiright

name=gtkshell
version=3.6
release=1
source=(config.mk Makefile.patch)

build() {
  cvs -d:pserver:anonymous@cvs.sv.gnu.org:/sources/antiright co antiright/libantiright
  cvs -d:pserver:anonymous@cvs.sv.gnu.org:/sources/antiright co antiright/${name}
  cvs -d:pserver:anonymous@cvs.sv.gnu.org:/sources/antiright co antiright/doc/${name}.1
  cp ${SRC}/config.mk ${SRC}/antiright/config.mk
  cd antiright/${name}
  patch Makefile ${SRC}/Makefile.patch
  make clean
  make
  make PREFIX=${PKG} install
  install -D -m 0644 ${SRC}/antiright/doc/${name}.1 ${PKG}/usr/man/man1/${name}.1
}
