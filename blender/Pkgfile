# $Id: $
# Description:  Fully integrated 3D graphics creation suite
# URL:          http://www.blender.org/
# Maintainer:   Jose V Beneyto, joberui at ei dot upv dot es
# Packager:     Jose V Beneyto, joberui at ei dot upv dot es
# Depends on:  	libjpeg,ode,openal,fmod,smpeg,ftgl,scons,openexr


name=blender
version=2.42a
release=1
source=(http://download.blender.org/source/$name-$version.tar.gz)

build() {
	cd $name-$version
	sed -i -e "s/-O2/${CFLAGS// /\' ,\'}/g" SConstruct
        scons
	install -d $PKG/usr/bin
	install -m 755 $SRC/install/linux2/blender $PKG/usr/bin
}
