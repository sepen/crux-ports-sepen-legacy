# $Id: $
# Packager:  sepen <sepen_@hotmail.com>
# Maintainer:
# Description: Dockapp. A simple text based network device status monitor.
# URL: http://dockapps.org/file.php/id/68


name=wmjiface
version=1.7cb
release=1
source=(http://dockapps.org/download.php/id/104/$name-$version.tgz)

build() {
    cd $name/src
    export INCDIR=" -I/usr/include/X11 -I /usr/include"
    export DESTDIR="$PKG"
    export LIBDIR="/usr/lib"
    #cat Makefile | sed 's/\/home\/jettero\/bin/\$PKG\/bin/g' | sed 's/\/home\/jettero\/www\/dockapps/\$PGK\/usr\/bin/g' > Makefile
    make
    mkdir -p $PKG/usr/bin
    cp $name $PKG/usr/bin
    cp ifacechk $PKG/usr/bin
    chmod 755 $PKG/usr/bin/*
    chown -R root:root $PKG
}

