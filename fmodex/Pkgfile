# Description: 	A cross platform audio library
# URL: 		http://www.fmod.org/
# Maintainer:   Jose V Beneyto, joberui at ei dot upv dot es
# Packager:     Jose V Beneyto, joberui at ei dot upv dot es
# Depends on:	

name=fmodex
version=4.03.03
release=1
source=(http://www.fmod.org/files/fmodapi40303linux.tar.gz)

build () {
	mkdir -p $PKG/usr/{lib,include/fmodex}
        cp -dpf $SRC/fmodapi40303linux/api/lib/{libfmodex.so.$version,libfmodexp.so.$version} $PKG/usr/lib
        ln -sf /usr/lib/libfmodex.so.$version  $PKG/usr/lib/libfmodex.so
	ln -sf /usr/lib/libfmodexp.so.$version  $PKG/usr/lib/libfmodexp.so
        cp -dpf $SRC/fmodapi40303linux/api/inc/*.h* $PKG/usr/include/fmodex
}
