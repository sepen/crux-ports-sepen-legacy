# Description: Main library for the antiright project.
# URL: http://www.nongnu.org/antiright/
# Maintainer: Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager: Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on: gtk

name=libantiright
version=3.6
release=2
source=(http://download.savannah.nongnu.org/releases/antiright/antiright-${version}.tar.bz2 \
        config.mk)

build() {
  cp ${SRC}/config.mk antiright-${version}
  make -C antiright-${version}/${name} clean
  make -C antiright-${version}/${name}
  install -D -m 0644 antiright-${version}/${name}/${name}.a ${PKG}/usr/lib/antiright/${name}.a
  install -d ${PKG}/usr/include/antiright
  install -m 0644 antiright-${version}/${name}/*.h ${PKG}/usr/include/antiright
}
