# Description: Plugin for quick access to folders, documents, and removable media.
# URL: http://goodies.xfce.org/projects/panel-plugins/xfce4-places-plugin
# Maintainer: Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager: Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on: thunar
# Group: xfce4

name=xfce4-places-plugin
version=1.1.0
release=1
source=(http://goodies.xfce.org/releases/$name/$name-$version.tar.bz2)

build() {
  cd $name-$version
  ./configure --prefix=/usr \
              --libexecdir=/usr/lib \
              --disable-debug
  make
  make DESTDIR=$PKG install
  rm -rf $PKG/usr/share/locale
  find $PKG/usr/share/xfce4/panel-plugins -type f -name '*.desktop' \
    -exec sed -r '/^(Comment|Name)\[/d' -i {} \;
}
