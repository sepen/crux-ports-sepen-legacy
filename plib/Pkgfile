# Description: A Suite of Portable Game Libraries.
# URL: http://plib.sourceforge.net/
# Maintainer: Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager: Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on: xorg,freeglut

name=plib
version=1.8.4
release=2
source=(http://plib.sourceforge.net/dist/${name}-${version}.tar.gz \
        ${name}-${version}-gcc41.patch \
        ${name}-${version}-too-many-axes.patch)

build() {
  cd ${name}-${version}
  patch -p0 < ${SRC}/${name}-${version}-gcc41.patch
  patch -p0 < ${SRC}/${name}-${version}-too-many-axes.patch
  ./configure --prefix=/usr \
              --with-GL=/usr/lib \
              --x-includes=/usr/include/X11 \
              --x-libraries=/usr/lib/X11 \
              --with-x 
  make  
  make DESTDIR=${PKG} install
}
