# Description:  Download all port sources from given repository
# URL:          http://mikeux.dyndns.org/scripts/
# Maintainer:   Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager:     Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on:   pkgutils,ports

name=pkgmkdo
version=0.3
release=1
source=(http://mikeux.dyndns.org/scripts/$name)

build() {
        mkdir -p $PKG/usr/bin
        install -m 755 $SRC/$name $PKG/usr/bin/$name
}
