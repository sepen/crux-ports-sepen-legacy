# Description: A music & sound effects system.
# URL: http://www.fmod.org/
# Maintainer: Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager: Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on:

name=fmodapi
version=4.12.03
release=1

source=(http://www.fmod.org/index.php/release/version/${name}${version[@]//./}linux.tar.gz)

build() {
  install -D -m 0755 ${name}${version[@]//./}linux/api/lib/libfmodex.so.$version \
    $PKG/usr/lib/libfmodex.so.$version
  install -D -m 0755 ${name}${version[@]//./}linux/api/lib/libfmodexp.so.$version \
    $PKG/usr/lib/libfmodexp.so.$version
  ln -s libfmodex.so.$version $PKG/usr/lib/libfmodex.so
  ln -s libfmodexp.so.$version $PKG/usr/lib/libfmodexp.so
  install -d $PKG/usr/include/fmodex
  install -m 0644 ${name}${version[@]//./}linux/api/inc/*.h* $PKG/usr/include/fmodex
}
