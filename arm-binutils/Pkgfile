# Description: Binutils for ARM toolchain
# URL: NA
# Maintainer: Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager: Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on: 

name=arm-binutils
version=2.15
release=1
source=(ftp://ftp.gnu.org/gnu/binutils/binutils-${version}.tar.bz2)

build() {
  declare -x CFLAGS="-s "
  cd binutils-${version}
  ./configure --prefix=/usr \
              --libdir=/usr/arm-elf/lib \
              --target=arm-elf \
              --host=arm-linux-gnu
  make
  make DESTDIR=${PKG} install
  rm -rf ${PKG}/usr/{info,share}
}

# End of file
