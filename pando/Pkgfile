# Description: free P2P software that makes publishing, sending and downloading large media files fast, easy and fun.
# URL: http://www.pando.com
# Maintainer: Jose V Beneyto, joberui at ei dot upv dot es
# Packager: Jose V Beneyto, joberui at ei dot upv dot es
# Depends on: gtk,libstdc++-compat

name=pando
version=0.9.1.0
release=1
source=(http://www.pando.com/dl/download/pandodl-0.9.1.0.tar.bz2 \
        ${name} ${name}.desktop)

build() {
  install -d ${PKG}/usr/share/${name}
  mv ${SRC}/pandodl/{bin/*,lib} ${PKG}/usr/share/${name}
  install -D ${SRC}/${name} ${PKG}/usr/bin/${name}
  install -D ${SRC}/pandodl/pando_icon48.png ${PKG}/usr/share/pixmaps/${name}.png
}
