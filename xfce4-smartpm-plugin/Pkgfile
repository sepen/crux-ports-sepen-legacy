# Description: This plugin checks for package updates using the Smart Package Manager.
# URL: http://goodies.xfce.org/projects/panel-plugins/xfce4-smartpm-plugin
# Maintainer: Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager: Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on: xfce4-panel
# Group: xfce4

name=xfce4-smartpm-plugin
version=0.2.2
release=1
source=(http://goodies.xfce.org/releases/${name}/${name}-${version}.tar.gz)

build() {
  cd ${name}-${version}
  autoconf
  ./configure --prefix=/usr \
              --libexecdir=/usr/lib \
              --disable-debug
  make
  make DESTDIR=${PKG} install
  rm -rf ${PKG}/usr/share/locale
}
