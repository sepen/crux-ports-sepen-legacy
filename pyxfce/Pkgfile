# Description: xfce bindings for python.
# URL: http://pyxfce.xfce.org/
# Maintainer: Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager: Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on: pygtk xfce-mcs-manager libxfcegui4

name=pyxfce
version=4.4.0
release=1
source=(http://pyxfce.xfce.org/$name-$version.tar.gz)

build() {
  cd $name-$version
  ./configure --prefix=/usr \
              --disable-debug
  make
  make DESTDIR=$PKG install
}
