# Description:  Python tool for automatic branch management. 'svn merge' alternative.
# URL:          http://www.orcaware.com/svn/wiki/Svnmerge.py
# Maintainer:   Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager:     Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on:   python

name=svnmerge
version=1
release=1
source=(http://svn.collab.net/repos/svn/trunk/contrib/client-side/$name.py)

build() {
	install -d $PKG/usr/bin
	install -m 755 $SRC/$name.py $PKG/usr/bin/$name
}
