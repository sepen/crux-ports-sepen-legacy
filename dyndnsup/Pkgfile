# $Id: $
# Description:  Auto-update dynamic dns service
# URL:          http://mikeux.dyndns.org/scripts/
# Maintainer:   Jose V Beneyto, joberui at ei dot upv dot es
# Packager:     Jose V Beneyto, joberui at ei dot upv dot es
# Depends on:   wget,lynx,awk

name=dyndnsup
version=1.1
release=1
source=(http://mikeux.dyndns.org/scripts/dyndnsup \
	dyndnsup.conf)

build() {
	mkdir -p $PKG/{bin,etc}
	install -m 755 dyndnsup $PKG/bin
	install -m 644 dyndnsup.conf $PKG/etc
}
