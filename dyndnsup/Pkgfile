# Description: Auto-update dynamic dns service
# URL: http://mikeux.dyndns.org/crux/distfiles/
# Maintainer: Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager: Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on: curl

name=dyndnsup
version=0.2
release=1
source=(http://mikeux.dyndns.org/crux/distfiles/$name-$version.tar.bz2)

build() {
  cd $name-$version
  install -D -m 0755 $name $PKG/usr/bin/$name
  install -D -m 0600 $name.conf $PKG/etc/$name.conf
  install -D -m 0644 $name.1 $PKG/usr/man/man1/$name.1
}
