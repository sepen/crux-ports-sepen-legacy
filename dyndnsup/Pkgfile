# Description: Auto-update dynamic dns service
# URL: http://mikeux.dyndns.org/
# Maintainer: Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager: Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on: curl

name=dyndnsup
version=0.2.2
release=1
source=(http://mikeux.dyndns.org/releases/$name-$version.tar.bz2)

build() {
  cd $name-$version
  make install DESTDIR=$PKG \
               BINDIR=/usr/bin \
               ETCDIR=/usr/etc \
               MANDIR=/usr/man \
               SHEEBANG=/usr/bin/bash
}
