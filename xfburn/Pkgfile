# Description: Xfburn is a simple CD burning tool
# URL: http://www.xfce.org/projects/xfburn/
# Maintainer: Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager: Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on: xfce4-dev-tools libisofs thunar startup-notification
# Group: xfce4

name=xfburn
version=0.3.0-4597
release=1
source=(http://crux.nu/files/distfiles/$name-$version.tar.bz2)

build() {
  cd $name-$version
  sed -e "s/@LINGUAS@//g" -e "s/@REVISION@/4597/g" \
    < configure.in.in > configure.in
  xdt-autogen
  ./configure --prefix=/usr \
              --enable-thunar-vfs \
              --disable-debug
  make
  make DESTDIR=$PKG install
  rm -rf $PKG/usr/share/locale
}
