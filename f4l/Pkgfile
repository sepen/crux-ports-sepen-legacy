# Description: Flash for Linux.
# URL: http://f4ldl.sourceforge.net/
# Maintainer: Jose V Beneyto, sepen at users dot sourceforge dot net
# Packager: Jose V Beneyto, sepen at users dot sourceforge dot net
# Depends on: qt3

name=f4l
version=0.2
release=1
source=(http://dl.sourceforge.net/sourceforge/${name}/${name}-${version}.tar.bz2)

build() {
	cd ${name}-${version}
	[ "${QTDIR}" == "" ] && export QTDIR=/usr/share/qt
	make
	install -D -m 0755 bin/${name} ${PKG}/usr/bin/${name}
}
